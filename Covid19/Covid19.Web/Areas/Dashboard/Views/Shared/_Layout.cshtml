@using Microsoft.AspNetCore.Identity
@inject SignInManager<WebUser> SignInManager
@inject UserManager<WebUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administrator</title>
    <meta name="author" content="Helder Chebre">
    <meta name="description" content="Página disponibilizada atu hare dadus konaba corona virus (covid-19). Dados em tempo real foti husi worldometers.com no corona-stats">
    <meta name="keywords" content="corona, corona-virus, coronavirus, covid, covid-19, corona realtime, corona-map">

    <!-- Open graph tags -->
    <meta property="og:title" content="Página disponibilizada atu hare dadus monitora corona virus (covid-19). Fonte husi ministério da saúde de RDTL, worldometers.com no corona-stats">
    <meta property="og:type" content="map">
    <meta property="og:url" content="http://chebre.net/images/preview.png">
    <meta property="og:image" content="http://chebre.net/images/preview.png">
    <meta property="og:description"
          content="Página disponibilizada atu hare dadus konaba monitora corona virus (covid-19).  Fonte husi ministério da saúde de RDTL, worldometers.com no corona-stats">
    <meta property="og:site_name" content="HC - COVID-19">

    <meta property="article:author" content="https://www.facebook.com/helderchebre">

    <!-- Favicons -->
    <link href="~/favicon.ico" rel="icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- font icon -->
    <link href="~/NiceAdmin/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/NiceAdmin/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/NiceAdmin/css/style.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />


    <!-- =======================================================
      Theme Name: NiceAdmin
      Theme URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
      Author: BootstrapMade
      Author URL: https://bootstrapmade.com
    ======================================================= -->


</head>
<body>

    <section id="container">
        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a asp-area="Dashboard" asp-controller="Home" asp-action="Index" class="logo">Covid <span class="lite">19</span></a>
            <!--logo end-->

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">

                    <!-- task notificatoin start -->
                    <!-- task notificatoin end -->
                    <!-- inbox notificatoin start-->
                    <!-- inbox notificatoin end -->
                    <!-- alert notification start-->
                    <li id="alert_notificatoin_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">

                            <i class="icon-bell-l"></i>
                            <span class="badge bg-important">7</span>
                        </a>
                        <ul class="dropdown-menu extended notification">
                            @*<div class="notify-arrow notify-arrow-blue"></div>*@
                            <li>
                                <p class="blue">You have 4 new notifications</p>
                            </li>
                            <li>
                                <a href="#">
                                    <span class="label label-primary"><i class="icon_profile"></i></span>
                                    Friend Request
                                    <span class="small italic pull-right">5 mins</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">See all notifications</a>
                            </li>
                        </ul>
                    </li>
                    <!-- alert notification end-->
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="/img/avatar1_small.jpg">
                            </span>
                            <span class="username">Hello @UserManager.GetUserName(User)!</span>

                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            @*<div class="log-arrow-up"></div>*@
                            <li class="eborder-top">
                                <a href="#!" id="btn-change-password" data-url='@Url.Action("ChangePassword","Account",null,Context.Request.Scheme)'
                                   data-title="Change password"><i class="icon_profile"></i> Change password</a>
                            </li>
                            <li>
                                @*<a asp-area="" asp-controller="Account" asp-action="Logout"><i class="icon_key_alt"></i> Log Out</a>*@
                                <form id="logoutForm" class="form-inline" asp-area="Dashboard" asp-controller="Account" asp-action="Logout">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>

                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                            <i class="icon_house_alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <li>
                        <a class="" asp-area="Dashboard" asp-controller="Quarantines" asp-action="Index">
                            <i class="icon_document_alt"></i>
                            <span>Quarantines Data</span>
                        </a>
                    </li>

                    <li>
                        <a class="" asp-area="Dashboard" asp-controller="Cases" asp-action="Index">
                            <i class="icon_document_alt"></i>
                            <span>Cases Data</span>
                        </a>
                    </li>

                    <li>
                        <a class="" asp-area="Dashboard" asp-controller="Settings" asp-action="Index">
                            <i class="icon_cog"></i>
                            <span>Settings</span>

                        </a>

                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->

        <section id="main-content">
            <section class="wrapper">
                @*<div class="row">
                        <div class="col-lg-12">
                            <h3 class="page-header"><i class="fa fa-laptop"></i> @ViewData["controller"]</h3>
                        </div>
                    </div>*@
                <!-- page start-->
                @RenderBody()
                <!-- page end-->
            </section>
            <div class="text-right">
                <div class="credits">
                    <!--
                      All the links in the footer should remain intact.
                      You can delete the links only if you purchased the pro version.
                      Licensing information: https://bootstrapmade.com/license/
                      Purchase the pro version form: https://bootstrapmade.com/buy/?theme=NiceAdmin
                    -->
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
        </section>

    </section>

    <!-- Modal -->
    <div class="modal fade" id="modal-account" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>



    <input type="hidden" id="message_pwd_change" value="@TempData["message_pwd_change"]" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script src="~/NiceAdmin/js/jquery.scrollTo.min.js"></script>
    <script src="~/NiceAdmin/js/scripts.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
        $(document).ready(function () {

            var message = $("#message_pwd_change").val();
            if (message != "") {
                Swal.fire({
                  icon: 'success',
                  title: 'Password changed',
                  text: message,
                })
            }

            $("#btn-change-password").on("click", function () {
                var url = $(this).data("url");
                var title = $(this).data("title");

                $.ajax({
                    url: url,
                    type: "get",
                    success: function (response) {
                        $("#modal-account .modal-title").html(title);
                        $("#modal-account .modal-body").html(response);
                        $("#modal-account").modal("show");
                    }
                });
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
